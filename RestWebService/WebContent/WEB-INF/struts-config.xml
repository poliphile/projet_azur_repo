<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>

	<form-beans type="org.apache.struts.action.ActionFormBean">
		<form-bean name="loginForm"
			type="mywebapp.java.main.presentation.strutsAction.LoginForm" />
		<form-bean name="lancerForm"
			type="mywebapp.java.main.presentation.strutsAction.LancerForm" />
		<form-bean name="affichageQuestionForm"
			type="mywebapp.java.main.presentation.strutsAction.AffichageQuestionForm" />
	</form-beans>

	<action-mappings type="org.apache.struts.action.ActionMapping">
		<action path="/login" parameter="" input="/index.jsp" scope="request"
			name="loginForm" type="mywebapp.java.main.presentation.controller.LoginAction">
			<forward name="success" path="/accueil.jsp" redirect="true" />
			<forward name="echec" path="/index.jsp" redirect="false" />
		</action>

		<action path="/lancer" parameter="" input="/accueil.jsp" scope="request"
			name="lancerForm" type="mywebapp.java.main.presentation.controller.LancerAction">
			<forward name="success" path="/affichageQuestion.jsp"
				redirect="false" />
		</action>

		<action path="/affichage" parameter="" input="/affichageQuestion.jsp"
			scope="request" name="affichageQuestionForm"
			type="mywebapp.java.main.presentation.controller.AffichageQuestionAction">
			<forward name="success" path="/affichageQuestion.jsp"
				redirect="true" />
		</action>
	</action-mappings>
</struts-config>